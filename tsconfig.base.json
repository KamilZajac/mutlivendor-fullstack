{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@multivendor-fullstack/interfaces": ["libs/interfaces/src/index.ts"],
      "@multivendor-fullstack/dto": ["libs/dto/src/index.ts"],
      "@multivendor-fullstack/ui": ["libs/ui/src/index.ts"],
      "@multivendor-fullstack/client/homepage": [
        "libs/client/homepage/src/index.ts"
      ],
      "@multivendor-fullstack/profile/profile-feature": [
        "libs/profile/profile-feature/src/index.ts"
      ],
      "@multivendor-fullstack/client/storefront": [
        "libs/client/storefront/src/index.ts"
      ],
      "@multivendor-fullstack/api/auth": ["libs/api/auth/src/index.ts"],
      "@multivendor-fullstack/auth": ["libs/auth/src/index.ts"],
      "@multivendor-fullstack/api/user": ["libs/api/user/src/index.ts"],
      "@multivendor-fullstack/api/shop-item": [
        "libs/api/shop-item/src/index.ts"
      ],
      "@multivendor-fullstack/entities": ["libs/entities/src/index.ts"],
      "@multivendor-fullstack/material": ["libs/material/src/index.ts"],
      "@multivendor-fullstack/admin/users": ["libs/admin/users/src/index.ts"],
      "@multivendor-fullstack/api/admin": ["libs/api/admin/src/index.ts"],
      "@multivendor-fullstack/admin/dashboard": [
        "libs/admin/dashboard/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
